@model BarclaysPayments.Pages.Response.CreateModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md">
            @if (Model.BarclaysResponse.STATUS == 9)
            {
                <div class="alert alert-success text-center" role="alert">
                    <h4 class="alert-heading"><i class="fas fa-thumbs-up"></i> Payment Processed Successfully</h4>
                    <p>
                        Thank you, your payment was successfully processed.
                    </p>
                    <p class="text-center">
                        <a href="https://www.wlc.ac.uk" class="btn btn-primary" rel="noopener">Return to the WLC Website</a>
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-danger text-center" role="alert">
                    <h4 class="alert-heading"><i class="fas fa-thumbs-down"></i> Payment Failed or Was Cancelled</h4>
                    <p>
                        Unfortunately your payment failed or was cancelled.
                    </p>
                    <p class="text-center">
                        <a href="mailto:ielts@wlc.ac.uk?Online%20Payment%20Failed" class="btn btn-primary" rel="noopener">Email ielts@wlc.ac.uk for Support</a>
                        <a href="https://www.wlc.ac.uk" class="btn btn-secondary" rel="noopener">Return to the WLC Website</a>
                    </p>
                </div>
            }
        </div>
    </div>
</div>

